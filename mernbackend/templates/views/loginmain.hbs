  <script>
    // Get the modal
    var modal = document.getElementById("myModal");
    var modal2 = document.getElementById("myModal2");
    var modal3 = document.getElementById("myModal3");
    
    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");
    var btn2 = document.getElementById("myBtn2");
    var btn3 = document.getElementById("myBtn3");
    
    // Get the <span> element that close-login-modal-login-modal-login-modals the modal
    var span = document.getElementsByClassName("close-login-modal")[0];
    var span2 = document.getElementsByClassName("close-login-modal")[1];
    var span3 = document.getElementsByClassName("close-login-modal")[2];
    
    // When the user clicks the button, open the modal 
    btn3.onclick = function() {
      modal3.style.display = "flex";
      
    }
    btn2.onclick = function() {
      modal2.style.display = "flex";
      
    }
    btn.onclick = function() {
      modal.style.display = "flex";
      
    }
    
    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
      modal.style.display = "none";
    }
    span2.onclick = function() {
      modal2.style.display = "none";
    }
    span3.onclick = function() {
      modal3.style.display = "none";
    }
    
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
      if (event.target == modal2) {
        modal2.style.display = "none";
      }
      if (event.target == modal3) {
        modal3.style.display = "none";
      }
    }
    </script>
    

